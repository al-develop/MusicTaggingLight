<Window x:Class="MusicTaggingLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicTaggingLight"
        xmlns:property="clr-namespace:PropertyTools;assembly=PropertyTools"
        xmlns:pt="http://propertytools.org/wpf"
        mc:Ignorable="d"
        Title="Music Tagging Light"
        Height="441.218"
        Width="540"
        MinHeight="350"
        MinWidth="540">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="WhiteSmoke" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57" />
            <RowDefinition />
            <RowDefinition Height="50" />
            <RowDefinition Height="22" />
            <RowDefinition Height="124" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Separator HorizontalAlignment="Left"
                       Height="5"
                       Grid.Row="0"
                       Width="10"
                       Margin="10,15,0,0"
                       VerticalAlignment="Top" />
            <Image Source="pack://application:,,,/Resources/musicrecord.png"
                   HorizontalAlignment="Left"
                   Height="16"
                   Grid.Row="0"
                   Margin="25,10,0,0"
                   VerticalAlignment="Top"
                   Width="16" />
            <TextBlock Text="Source"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       Margin="46,9,0,0"
                       VerticalAlignment="Top" />
            <Separator Height="5"
                       Grid.Row="0"
                       Margin="87,15,10,0"
                       VerticalAlignment="Top" />
            <TextBox VerticalAlignment="Top"
                     HorizontalAlignment="Stretch"
                     Margin="10,28,72,0"
                     Height="22" />
            <Button VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Width="57"
                    Height="22"
                    Margin="0,28,10,7">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Resources/search.png"
                           HorizontalAlignment="Left"
                           Height="16"
                           Margin="0,0,5,0"
                           VerticalAlignment="Top"
                           Width="16" />
                    <TextBlock Text="..." />
                </StackPanel>
            </Button>
        </Grid>
        <Separator HorizontalAlignment="Left"
                   Height="5"
                   Width="10"
                   Margin="10,17,0,0"
                   VerticalAlignment="Top"
                   Grid.Row="1" />
        <Image Source="pack://application:,,,/Resources/music.png"
               HorizontalAlignment="Left"
               Height="16"
               Grid.Row="1"
               Margin="25,10,0,0"
               VerticalAlignment="Top"
               Width="16" />
        <TextBlock Text="Loaded Files"
                   HorizontalAlignment="Left"
                   Margin="46,10,0,0"
                   VerticalAlignment="Top"
                   Grid.Row="1"
                   Height="16"
                   Width="66" />
        <Separator Height="5"
                   Margin="117,17,10,0"
                   VerticalAlignment="Top"
                   Grid.Row="1" />
        <Grid Grid.Row="1"
              Margin="10,31,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="337*" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="190*" />
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0"
                      Margin="0,0,5,0" />
            <GridSplitter Grid.Column="1"
                          Width="2" />
            <pt:PropertyGrid Margin="5,0,0,0"
                             Grid.Column="2" />
        </Grid>
        <Grid Grid.Row="2"
              Height="68"
              VerticalAlignment="Top"
              Grid.RowSpan="2">
            <Separator HorizontalAlignment="Left"
                       Height="5"
                       Width="10"
                       Margin="10,3,0,0"
                       VerticalAlignment="Top" />
            <Image Source="pack://application:,,,/Resources/toolbox.png"
                   HorizontalAlignment="Left"
                   Height="16"
                   Margin="25,-2,0,0"
                   VerticalAlignment="Top"
                   Width="16" />
            <TextBlock Text="Toolbox"
                       HorizontalAlignment="Left"
                       Margin="46,-2,0,0"
                       VerticalAlignment="Top" />
            <Separator Height="5"
                       Margin="93,3,10,0"
                       VerticalAlignment="Top" />
            <Button VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="110"
                    Height="22"
                    Margin="10,18,0,28">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="image"
                           Source="pack://application:,,,/Resources/www.png"
                           HorizontalAlignment="Left"
                           Height="16"
                           Margin="0,0,5,0"
                           VerticalAlignment="Top"
                           Width="16" />
                    <TextBlock Text="Search Online" />
                </StackPanel>
            </Button>
            <Button VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="110"
                    Height="22"
                    Margin="125,18,0,28">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Resources/save.png"
                           HorizontalAlignment="Left"
                           Height="16"
                           Margin="0,0,5,0"
                           VerticalAlignment="Top"
                           Width="16" />
                    <TextBlock Text="Save Tags" />
                </StackPanel>
            </Button>
            <Button VerticalAlignment="Center"
                    Height="22"
                    Margin="0,17,10,29"
                    HorizontalAlignment="Right"
                    Width="110">
                <StackPanel Orientation="Horizontal">
                    <Image Source="pack://application:,,,/Resources/shutdown.png"
                           HorizontalAlignment="Left"
                           Height="16"
                           Margin="0,0,5,0"
                           VerticalAlignment="Top"
                           Width="16" />
                    <TextBlock Text="Exit" />
                </StackPanel>
            </Button>
        </Grid>
        <Separator HorizontalAlignment="Left"
                   Height="5"
                   Grid.Row="3"
                   Width="10"
                   Margin="10,8,0,0"
                   VerticalAlignment="Top" />
        <Image Source="pack://application:,,,/Resources/info16.png"
               HorizontalAlignment="Left"
               Height="16"
               Grid.Row="3"
               Margin="25,3,0,0"
               VerticalAlignment="Top"
               Width="16" />
        <TextBlock Text="About"
                   Grid.Row="3"
                   HorizontalAlignment="Left"
                   Margin="46,2,0,0"
                   VerticalAlignment="Top"
                   Height="16"
                   Width="42" />
        <Separator Height="5"
                   Grid.Row="3"
                   Margin="93,8,10,0"
                   VerticalAlignment="Top" />
        <Image Source="pack://application:,,,/Resources/icons8.png"
               HorizontalAlignment="Left"
               Height="16"
               Grid.Row="4"
               Margin="10,3,0,0"
               VerticalAlignment="Top"
               Width="16" />
        <TextBlock x:Name="textBlock"
                   Grid.Row="4"
                   TextWrapping="Wrap"
                   Text="Icons by:"
                   VerticalAlignment="Top"
                   Margin="30,2,0,0"
                   Height="18"
                   HorizontalAlignment="Left"
                   Width="50" />
        <Image Source="pack://application:,,,/Resources/puzzle.png"
               HorizontalAlignment="Left"
               Height="16"
               Grid.Row="4"
               Margin="10,49,0,0"
               VerticalAlignment="Top"
               Width="16" />
        <TextBox x:Name="tbxIcons"
                 Height="19"
                 Margin="128,0,10,0"
                 Grid.Row="4"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 Text="https://icons8.com/"
                 VerticalAlignment="Top" />
        <Image Source="pack://application:,,,/Resources/info16.png"
               HorizontalAlignment="Left"
               Height="16"
               Grid.Row="4"
               Margin="10,26,0,0"
               VerticalAlignment="Top"
               Width="16" />
        <TextBlock x:Name="txtProgramming"
                   Grid.Row="4"
                   TextWrapping="Wrap"
                   Text="Programming by:"
                   VerticalAlignment="Top"
                   Margin="30,24,0,0"
                   Height="18"
                   HorizontalAlignment="Left"
                   Width="98" />
        <TextBox x:Name="textBox"
                 Height="19"
                 Margin="128,24,10,0"
                 Grid.Row="4"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 Text="https://github.com/al-develop"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Stretch" />
        <Image Source="pack://application:,,,/Resources/cmd.png"
               HorizontalAlignment="Left"
               Height="16"
               Grid.Row="4"
               Margin="10,26,0,0"
               VerticalAlignment="Top"
               Width="16" />
        <TextBlock x:Name="txtProgramming_Copy"
                   Grid.Row="4"
                   TextWrapping="Wrap"
                   Text="Additional Libs:"
                   VerticalAlignment="Top"
                   Margin="30,47,0,0"
                   Height="18"
                   HorizontalAlignment="Left"
                   Width="98" />
        <TextBlock x:Name="txtProgramming_Copy1"
                   Grid.Row="4"
                   TextWrapping="Wrap"
                   Text="DevExpress.Mvvm Ookii.Dialogs.Wpf TagLibSharp   objorke/PropertyTools"
                   Margin="128,47,0,0"
                   HorizontalAlignment="Left"
                   Width="118"
                   Height="67"
                   VerticalAlignment="Top" />
    </Grid>
</Window>
